generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model TodoGroup {
  id        String   @id @unique @default(uuid())
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now())
  name      String
  Todo      Todo[]
}

model Todo {
  id          String     @id @unique @default(uuid())
  enabled     Boolean    @default(true)
  text        String
  createdAt   DateTime   @default(now())
  groupId     TodoGroup? @relation(fields: [todoGroupId], references: [id])
  todoGroupId String?
}
